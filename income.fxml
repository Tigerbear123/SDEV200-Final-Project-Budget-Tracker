<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.secondbudgettrackergui.IncomeExpenseSummary">
    <top>
        <Label text="Income" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <GridPane hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Name:" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" />
                <Label text="Category:" GridPane.rowIndex="1" />
                <ComboBox fx:id="categoryBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Amount:" GridPane.rowIndex="2" />
                <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Source:"  GridPane.rowIndex="3" />
                <TextField fx:id="sourceField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>
    </center>
</BorderPane>
